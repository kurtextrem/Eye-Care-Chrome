{
	"name": "Eye Care Notification",
	"version": "1.0.4.1",
	"manifest_version": 2,

	"description": "Reminds you to look away from your screen every 20min (by default) .",
	"icons": {
		"128": "eye-icon.png"
	},
	"author": "Jacob „kurtextrem\" Groß",

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"browser_action": {
		"default_icon": "eye-icon.png",
		"default_popup": "options.html"
	},

	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},

	"minimum_chrome_version": "42",

	"permissions": ["notifications", "storage", "alarms"]
}
